<Page x:Class="WpfApp1.Pages.Registration"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp1.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450"
      Title="Регистрация" Width="228">

    <Grid Tag="">
        <TextBlock HorizontalAlignment="Left" Margin="10,60,0,0" TextWrapping="Wrap" Text="Введите имя автора:" VerticalAlignment="Top" Foreground="#FF2CAB00" FontWeight="Bold"/>
        <TextBox x:Name="TBName" HorizontalAlignment="Left" Margin="10,80,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="204"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,104,0,0" TextWrapping="Wrap" Text="Введите логин:" VerticalAlignment="Top" Foreground="#FF2CAB00" FontWeight="Bold"/>
        <TextBox x:Name="TBLogin" HorizontalAlignment="Left" Margin="10,124,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="204"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,284,0,0" TextWrapping="Wrap" Text="Введите почту:" VerticalAlignment="Top" Foreground="#FF2CAB00" FontWeight="Bold"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,238,0,0" TextWrapping="Wrap" Text="Дата Рождения:" VerticalAlignment="Top" Foreground="#FF2CAB00" FontWeight="Bold"/>
        <TextBlock HorizontalAlignment="Left" Margin="126,238,0,0" TextWrapping="Wrap" Text="Стаж:" VerticalAlignment="Top" Foreground="#FF2CAB00" FontWeight="Bold"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,328,0,0" TextWrapping="Wrap" Text="Введите телефон:" VerticalAlignment="Top" Foreground="#FF2CAB00" FontWeight="Bold"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,148,0,0" TextWrapping="Wrap" Text="Введите пароль:" VerticalAlignment="Top" Foreground="#FF2CAB00" FontWeight="Bold"/>
        <PasswordBox x:Name="PBpassword" HorizontalAlignment="Left" Margin="10,212,0,0" VerticalAlignment="Top" Width="204" Password="" PasswordChanged="PasswordBox_PasswordChanged"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,192,0,0" TextWrapping="Wrap" Text="Введите пароль повторно:" VerticalAlignment="Top" Foreground="#FF2CAB00" FontWeight="Bold"/>
        <TextBox x:Name="TBExperience" HorizontalAlignment="Left" Margin="126,262,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="88" Height="18"/>
        <Button x:Name="ButtonRegist" Content="Зарегистрироваться" HorizontalAlignment="Left" Margin="10,372,0,0" VerticalAlignment="Top" Width="204" Click="ButtonRegist_Click"/>
        <DatePicker x:Name="DPDateOfBirth" HorizontalAlignment="Left" Margin="10,262,0,0" VerticalAlignment="Top" Height="18" FontSize="8" Width="87"/>
        <TextBox x:Name="TBEmail" HorizontalAlignment="Left" Margin="10,306,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="204" Height="18"/>
        <TextBox x:Name="TBTelephone" HorizontalAlignment="Left" Margin="10,350,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="204" Height="18"/>
        <Button x:Name="ButtonExit" Content="Назад" HorizontalAlignment="Left" Margin="10,398,0,0" VerticalAlignment="Top" Width="204" Click="ButtonExit_Click"/>
        <TextBlock Margin="52,20,0,0" Text="Регистрация" VerticalAlignment="Top" Width="120" Foreground="#FF0027FF" FontSize="18" HorizontalAlignment="Left" TextWrapping="Wrap" TextAlignment="Center" Height="24" FontWeight="Bold"/>
        <TextBox x:Name="TBPassword" HorizontalAlignment="Left" Margin="10,170,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="204"/>

    </Grid>
</Page>
