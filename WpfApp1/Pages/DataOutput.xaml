<Page x:Class="WpfApp1.Pages.DataOutput"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp1.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Рецепты">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height ="Auto"/>
            <RowDefinition Height ="5*"/>
            <RowDefinition Height ="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Top" Margin="10">
            <TextBox x:Name="TextSearch" TextWrapping="Wrap" Width="186" Height="20" ToolTip="Введите текст для поиска рецептов" TextChanged="TextSearch_TextChanged"/>

            <ComboBox x:Name="ComboSort" Height="20" Width="311" Margin="5,0,0,0" SelectionChanged="ComboSort_SelectionChanged">
                <ComboBoxItem Content="Сортировать по имени"/>
                <ComboBoxItem Content="Сортировать по времени приготовления"/>
            </ComboBox>
        </StackPanel>
        <ListView x:Name="listProducts" Grid.Row="1" ToolTip="Список доступных рецептов">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <WrapPanel>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="500"/>
                                <ColumnDefinition Width="200"/>
                            </Grid.ColumnDefinitions>
                            <Image Grid.Column="0" Source="{Binding CurrentPhoto}"></Image>
                            <StackPanel Orientation="Vertical" HorizontalAlignment="Left" Margin="5" Grid.Column="1">
                                <TextBlock Width="auto" TextWrapping="Wrap" Height="auto" Text="{Binding RecipeName}" FontWeight="Bold" FontSize="16" Foreground="#FF0027FF"/>
                                <TextBlock Width="auto" TextWrapping="Wrap" Height="auto">
                                <Run Text="Описание: "/>
                                <Run Text="{Binding DescriptionN}"/>
                                </TextBlock>
                                <TextBlock Width="auto" TextWrapping="Wrap" Height="auto">
                                <Run Text="Автор: "/>
                                <Run Text="{Binding Authors.AuthorName}"/>
                                </TextBlock>
                                <TextBlock Width="auto" TextWrapping="Wrap" Height="auto">
                                <Run Text="Категория: "/>
                                <Run Text="{Binding Categories.CategoryName}"/>
                                </TextBlock>

                                <Button Content="Редактировать" Width="120" Height="20" Click="EditButton_Click" ToolTip="Редактировать рецепт" HorizontalAlignment="Left" VerticalAlignment="Bottom"/>
                            </StackPanel>
                            <TextBlock Width="auto" TextWrapping="Wrap" Height="auto" Grid.Column="2">
                                <Run Text="Время приготовления: "/>
                                <Run Text="{Binding CookingTime}"/>
                            </TextBlock>
                        </Grid>
                    </WrapPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Button Content="Добавить рецепт" Width="120" Height="20" Click="AddButton_Click" ToolTip="Добавить рецепт" Grid.Row="2" Margin="10" HorizontalAlignment="Left" VerticalAlignment="Bottom"/>
    </Grid>
</Page>
